<odoo>
    <record id="view_crossovered_budget_lines_pivot_inherit" model="ir.ui.view">
        <field name="name">crossovered.budget.lines.pivot.inherit</field>
        <field name="model">crossovered.budget.lines</field>
        <field name="inherit_id" ref="account_budget_oca.view_crossovered_budget_lines_pivot"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='planned_amount']" position="after">
                <field name="income_amount" type="measure"/>
            </xpath>
        </field>
    </record>
    <record id="view_account_analytic_account_form_inherit_budget_purchase" model="ir.ui.view">
        <field name="name">account.analytic.account.form.inherit.budget.purchase</field>
        <field name="model">account.analytic.account</field>
        <field name="inherit_id" ref="account_budget_oca.view_account_analytic_account_form_inherit_budget"/>
        <field name="arch" type="xml">
            <field name="planned_amount" position="after">
                <field name="income_amount" sum="Income Amount"
                       widget="monetary"/>
            </field>
        </field>
    </record>
    <record id="view_crossovered_budget_view_form_inherit_purchase" model="ir.ui.view">
        <field name="name">crossovered.budget.view.form.inherit.purchase</field>
        <field name="model">crossovered.budget</field>
        <field name="inherit_id" ref="account_budget_oca.crossovered_budget_view_form"/>
        <field name="arch" type="xml">
            <field name="planned_amount" position="after">
                <field name="income_amount" sum="Income Amount"
                       widget="monetary"/>
            </field>
        </field>
    </record>


    <record id="view_crossovered_budget_lines_form_inherit" model="ir.ui.view">
        <field name="name">crossovered.budget.lines.form.inherit</field>
        <field name="model">crossovered.budget.lines</field>
        <field name="inherit_id" ref="account_budget_oca.view_crossovered_budget_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button class="oe_stat_button" name="action_view_income_invoice_lines" type="object"
                        attrs="{'invisible': ['|', ('income_invoice_line_count', '=', 0), ('split_income', '!=', True)]}" icon="fa-pencil-square-o">
                    <field string="Income Sale Order(s)" name="income_invoice_line_count" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
