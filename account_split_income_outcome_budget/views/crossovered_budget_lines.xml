<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="crossovered_budget_lines_inherit" model="ir.ui.view">
        <field name="name">crossovered.budget.lines.inherit</field>
        <field name="model">crossovered.budget.lines</field>
        <field name="inherit_id" ref="account_budget_oca.view_crossovered_budget_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='planned_amount']" position="after">
                <field name="split_income" invisible="1"/>
                <field name="income_amount" widget="monetary" attrs="{'invisible': [('split_income', '!=', True)]}"/>
            </xpath>
        </field>
    </record>
    <record id="crossovered_budget_lines_form_inherit" model="ir.ui.view">
        <field name="name">crossovered.budget.lines.form.inherit</field>
        <field name="model">crossovered.budget.lines</field>
        <field name="inherit_id" ref="account_budget_oca.view_crossovered_budget_line_form"/>
        <field name="arch" type="xml">
            <field name="crossovered_budget_id" position="after">
                <field name="split_income"/>
            </field>
            <field name="practical_amount" position="after">
                <field name="income_amount" widget="monetary" attrs="{'invisible': [('split_income', '!=', True)]}"/>
            </field>
        </field>
    </record>
</odoo>